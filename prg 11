import matplotlib.pyplot as plt



months = ['Jan', 'Feb', 'Mar', 'Apr', 'May']


sales = [1000, 1500, 1200, 1800, 2000]


plt.plot(months, sales)


plt.xlabel('Month')


plt.ylabel('Sales')


plt.title('Monthly Sales')


plt.show()




import matplotlib.pyplot as plt


months = ['Jan', 'Feb', 'Mar', 'Apr', 'May']


sales = [1000, 1500, 1200, 1800, 2000]


plt.scatter(months, sales)


plt.xlabel('Month')


plt.ylabel('Sales')


plt.title('Monthly Sales')


plt.show()



import matplotlib.pyplot as plt



months = ['Jan', 'Feb', 'Mar', 'Apr', 'May']


sales = [1000, 1500, 1200, 1800, 2000]


plt.bar(months, sales)


plt.xlabel('Month')


plt.ylabel('Sales')


plt.title('Monthly Sales')


plt.show()
